{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-4">
            <h1>Création d'éditeur</h1>

            {{ form_start(form) }}
            {{ form_errors(form, {'attr': {'class': 'alert alert-warning', 'role':'alert'}}) }}
            <div>
                {{ form_label(form.name, 'Nom') }}
            </div>
            <div>
                {{ form_widget(form.name) }}
            </div>
            <br>
            <div>
                <input class="btn btn-warning" type="submit" value="Créer" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
