{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-4">
            <h1>Éditeur d'éditeur</h1>

            {{ form_start(edit_form) }}
                {{ form_errors(edit_form, {'attr': {'class': 'alert alert-warning', 'role':'alert'}}) }}
                <div>
                    {{ form_label(edit_form.name, 'Nom') }}
                </div>
                <div>
                    {{ form_widget(edit_form.name) }}
                </div>
                <br>
                <div>
                    <input class="btn btn-warning" type="submit" value="Éditer" />
                </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
