{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>Créateur de studio</h1>

            {{ form_start(form) }}
            {{ form_errors(form, {'attr': {'class': 'alert alert-warning', 'role':'alert'}}) }}
            <table class="table" >
                <thead>
                <tr>
                    <th>{{ form_label(form.name, 'Nom') }}</th>
                    <th>{{ form_label(form.releasedDate, 'Création le') }}</th>
                    <th>{{ form_label(form.editeur, 'Éditeur') }}</th>
                    <th>{{ form_label(form.animes, 'Animes') }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}</td>
                    <td>{{ form_widget(form.releasedDate, {'attr': {'class': 'js-datepicker'}}) }}</td>
                    <td>{{ form_widget(form.editeur, {'attr': {'class': 'form-control'}}) }}</td>
                    <td>{{ form_widget(form.animes, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
                </tbody>
            </table>
            <div>
                <input class="btn btn-success" type="submit" value="Créer" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
