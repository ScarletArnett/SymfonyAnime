{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>Éditeur de studio</h1>

            {{ form_start(edit_form) }}
            {{ form_errors(edit_form, {'attr': {'class': 'alert alert-warning', 'role':'alert'}}) }}
            <table class="table" >
                <thead>
                    <tr>
                        <th>{{ form_label(edit_form.name, 'Nom') }}</th>
                        <th>{{ form_label(edit_form.releasedDate, 'Création le') }}</th>
                        <th>{{ form_label(edit_form.editeur, 'Éditeur') }}</th>
                        <th>{{ form_label(edit_form.animes, 'Animes') }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}</td>
                        <td>{{ form_widget(edit_form.releasedDate, {'attr': {'class': 'js-datepicker'}}) }}</td>
                        <td>{{ form_widget(edit_form.editeur, {'attr': {'class': 'form-control'}}) }}</td>
                        <td>{{ form_widget(edit_form.animes, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                </tbody>
            </table>
            <div>
                <input class="btn btn-warning" type="submit" value="Éditer" />
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
